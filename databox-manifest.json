{
  "manifest-version": 1,

  "name": "databox-app-twitter-sentiment",
  "version": "0.1.0",

  "description": "A simple Databox example app for the twitter driver",
  "author": "Anthony Brown <Anthony.Brown@nottingham.ac.uk> ()",
  "license": "MIT",

	"databox-type":"app",

  "tags": [
    "app",
    "twitter",
    "sentiment",
    "demo",
    "example"
  ],

  "homepage": "https://github.com/me-box/databox-app-twitter-sentiment",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/me-box/databox-app-twitter-sentiment.git"
  },

  
   "packages":[  
      {  
         "name":"Twitter timeline sentiment analysis",
         "purpose":"Performs sentiment analysis on a twitter timeline",
         "install":"optional",
         "risk":"",
         "benefits":"sentiment analysis",
         "datastores":[  
            {  
               "name":"databox-driver-twitter-stream",
               "type":"databox-driver-twitter-stream"
            },
            {  
               "id":"userTimeLine",
               "name":"userTimeLine",
               "type":"twitterUserTimeLine"
            }
         ]
      }
   ],
   "allowed-combinations":[  

   ],

  "network-permissions": [
  ],
  

  "resource-requirements": {
    "store":"databox-store-blob"
  },

  "volumes": []
}